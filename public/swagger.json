{
  "openapi": "3.0.0",
  "info": {
    "description": "This is a simple bank API with JWT authentication. You can create an account, login, deposit, withdraw, transfer and see your account.",
    "version": "1.0.0",
    "title": "Bank MDB",
    "contact": {
      "email": "contato@exemplo.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3333/api/v1"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "auth",
      "description": "Authentication operations"
    },
    {
      "name": "actions",
      "description": "Account actions"
    }
  ],
  "paths": {
    "/account/create": {
      "post": {
        "summary": "Account create",
        "tags": ["auth"],
        "requestBody": {
          "description": "Create a new account",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "owner": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["owner", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Account created",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/account/login": {
      "post": {
        "summary": "Account login",
        "tags": ["auth"],
        "requestBody": {
          "description": "Create a new account",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "owner": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["owner", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Login successful",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/account": {
      "get": {
        "summary": "Return the account",
        "tags": ["auth"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Account returned",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "_id": "string",
                  "owner": "string",
                  "balance": "number",
                  "transactions": [
                    {
                      "_id": "string",
                      "from": "string",
                      "type": "string",
                      "to": "string ou null",
                      "amount": "number",
                      "effectiveDate": "string",
                      "__v": "number"
                    }
                  ],
                  "__v": "number"
                }
              }
            }
          },
          "401": {
            "description": "Token de autenticação não fornecido ou inválido"
          }
        }
      }
    },
    "/account/deposit": {
      "post": {
        "summary": "Account deposit",
        "tags": ["actions"],
        "requestBody": {
          "description": "Create a new deposit",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "number"
                  }
                },
                "required": ["amount"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Deposit successful",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/account/withdraw": {
      "post": {
        "summary": "Account withdraw",
        "tags": ["actions"],
        "requestBody": {
          "description": "Create a new withdraw",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "number"
                  }
                },
                "required": ["amount"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Withdraw successful",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/account/transfer": {
      "post": {
        "summary": "Account transfer",
        "tags": ["actions"],
        "requestBody": {
          "description": "Create a new transfer",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "to": {
                    "type": "string"
                  },
                  "amount": {
                    "type": "number"
                  }
                },
                "required": ["to", "amount"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tranfer successful",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
